@model AddEditVM
@{
    ViewData["Title"] = "Add";
}

<h1>@(Model == null ? "Adicionar" : "Editar") Usuario</h1>

@*<div>
        @Html.ValidationSummary(false);
    </div>*@

<form method="post">
    <div class="form-row">

        <div class="form-group col-md-6">
            <label asp-for="Nome" for="Nome"></label>
            <input type="text" asp-for="Nome" class="form-control" name="Nome" autofocus>
            @*@Html.ValidationMessageFor(m=>m.Nome)*@
            <span asp-validation-for="Nome" style="color:red"></span>

        </div>

        <div class="form-group col-md-6">
            <label asp-for="UserName" for="Nome"></label>
            <input type="text" asp-for="UserName" class="form-control" name="UserName">
            @*@Html.ValidationMessageFor(m=>m.UserName)*@
            <span asp-validation-for="UserName" style="color:red"></span>

        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ValorUnitario" asp-for="Senha"></label>
            <input type="password" asp-for="Senha" class="form-control" name="Senha">
            @*@Html.ValidationMessageFor(m => m.Senha)*@
            <span asp-validation-for="Senha" style="color:red"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("")">content</a>
</form>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js"></script>
}