@model LoginVM
@{
    ViewData["Title"] = "SignIn";
}

<h1>Login</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form method="post" class="form-signin">
                        <div class="form-label-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" type="text" id="userName" class="form-control" placeholder="Nome do Usuario" required autofocus>
                            <span asp-validation-for="UserName"></span>
                        </div>

                        <div class="form-label-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" id="senha" class="form-control" placeholder="Password" required>
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="chkRememberme">
                            <label class="custom-control-label" asp-for="RememberMe">Remember password</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                        <a class="btn btn-lg btn-info btn-block text-uppercase" href="@Url.Action("Index", "Home")">Voltar</a>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
